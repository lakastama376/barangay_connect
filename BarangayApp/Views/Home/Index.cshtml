@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Barangay Connect</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
</head>
<body>
    <!-- Header Section -->
    <div class="header">
        <div class="header-content">
            <img src="~/Uploads/Images/logo.png" alt="Logo" class="d-block mx-auto" style="width:150px;" />
            <h1>Welcome to Our Barangay Connect</h1>
            <p>A community for residents to access services, announcements, and important information.</p>
        </div>
    </div>
    <!-- Services Section -->
    <div class="services-title" style="font-size: 32px; font-weight: bold; color: #2b7a56; text-align: center; margin-top: 20px; width: 100%;">
        Our Services
    </div>
    <div class="services" style="display: flex; justify-content: center; margin-top: 40px;">
        <div class="service-card">
            <i class="fas fa-file-alt"></i> 
            <h3>Documents</h3>
            <p>Access barangay clearance, certificates, announcements, and more.</p>
        </div>
        <div class="service-card">
            <i class="fas fa-bell"></i> 
            <h3>Announcements</h3>
            <p>Stay updated with the latest barangay news, events, and important notices.</p>
        </div>
        <div class="service-card">
            <i class="fas fa-comments"></i> 
            <h3>Complaints & Concerns</h3>
            <p>Report issues or send suggestions directly to barangay officials.</p>
        </div>
    </div>
</body>
</html>

<style>
    body {
        margin: 0;
        padding: 0;
        background: linear-gradient(to right, #a2d3a1, #f9fbb4);
    }

    .header {
        background-image: linear-gradient(rgba(0, 51, 0, 0.6), rgba(0, 51, 0, 0.6)), url('/Uploads/Images/home-header.jpg');
        background-size: cover;
        background-position: center;
        padding: 100px 0;
        text-align: center;
        color: white;
    }

    .header-content {
        text-align: center;
        margin-bottom: 30px;
    }

        .header-content h1 {
            font-size: 36px;
            margin: 0;
        }

        .header-content p {
            font-size: 18px;
        }

    .service-card {
        background: white;
        padding: 30px;
        margin: 10px;
        text-align: center;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        width: 300px;
    }

        .service-card h3 {
            font-size: 22px;
            margin-top: 20px;
        }

        .service-card p {
            font-size: 15px;
            margin-top: 10px;
        }

        .service-card i {
            font-size: 50px;
            color: #4CAF50;
        }
</style>
